<UserControl x:Class="GameOfLifeProject.CustomInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameOfLifeProject"
             mc:Ignorable="d" 
             Height="auto" Width="auto" Name="customInput">
    
    <Grid  Height="30" HorizontalAlignment="Left">
        <WrapPanel>
            <Label MinWidth="150" Width="auto" Height="30" Content="{Binding ElementName=customInput, Path=Text}"></Label>
            <TextBox  Width="50" Height="30" Name="txtBox" Text="{Binding ElementName=customInput, Path=DefaultValue}"></TextBox>
        </WrapPanel>

        
    </Grid>
</UserControl>
